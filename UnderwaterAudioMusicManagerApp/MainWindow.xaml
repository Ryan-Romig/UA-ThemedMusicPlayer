                                    <ImageBrush Stretch="Uniform" ImageSource="/left-chevron (1).png"/>
                                </Button.OpacityMask>
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Button.RenderTransform>
