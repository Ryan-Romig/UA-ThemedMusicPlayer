                        </StackPanel>
                    </Grid>
                    











                </Grid>


            </Grid>
            <!--Controls-->
            <Grid Grid.Row="1" Grid.ColumnSpan="3">
                <Grid>
                    <Grid.Background>
                        <ImageBrush ImageSource="/bluebackground.jpg"/>
                    </Grid.Background>
