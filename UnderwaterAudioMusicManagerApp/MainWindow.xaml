<Window x:Class="UnderwaterAudioMusicManagerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnderwaterAudioMusicManagerApp"
        mc:Ignorable="d"
        Title="Music Manager" Height="319" Width="639" ResizeMode="CanResize" Icon="/logo.png" AllowsTransparency="True" WindowStyle="None">
    <Window.Resources>
        <Style x:Key="FocusVisual">
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Rectangle Margin="2" StrokeDashArray="1 2" SnapsToDevicePixels="true" StrokeThickness="1" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <SolidColorBrush x:Key="Button.MouseOver.Border" Color="#FF3C7FB1"/>


        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisual}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}" SnapsToDevicePixels="true" OverridesDefaultStyle="True">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsDefaulted" Value="true">
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="true">

                                <Setter Property="BorderBrush" TargetName="border" Value="{StaticResource Button.MouseOver.Border}"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>



    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32"></WindowChrome>
    </WindowChrome.WindowChrome>

    <Grid>

        <!--Main Window Grid-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="32px"/>
            <RowDefinition Height="797*"/>
        </Grid.RowDefinitions>

        <!--TitleBar-->

        <Grid MaxHeight="32px" Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF72C3E4"/>
                    <GradientStop Color="#FFF0F0E9" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180*"/>
                <ColumnDefinition Width="427*"/>
                <ColumnDefinition Width="32px"/>
            </Grid.ColumnDefinitions>

            <!--TitleBar Content-->
            <Rectangle Stretch="Fill" Grid.Column="0" Margin="10,0,0,0" MinHeight="32px" MinWidth="160px" VerticalAlignment="Center" HorizontalAlignment="Left" Height="32" Width="180" Grid.ColumnSpan="2" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/headerLogo.png" Stretch="Uniform"/>
                </Rectangle.Fill>
            </Rectangle>
            <Button Style="{DynamicResource ButtonStyle1}"  WindowChrome.IsHitTestVisibleInChrome="True" x:Name="closeButton"  Grid.Column="2"  BorderBrush="{x:Null}" Foreground="{x:Null}" Content="{x:Null}" Click="closeButton_Click"  Width="28" Height="28">
                <Button.Background>
                    <ImageBrush ImageSource="/close.jpeg" Stretch="Uniform"/>
                </Button.Background>

            </Button>

        </Grid>


        <!--Body-->
        <Grid Grid.Row="1" Background="#FF939393">
            <Grid.RowDefinitions>
                <RowDefinition Height="31*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!--Main Content-->
            <Grid  Grid.Row="0">
                <ListBox x:Name="playlistBox" Margin="0,10,0,42"/>
                <Button x:Name="importButton" Content="Import" Margin="-10,175,0,10" Click="importButton_Click"/>

            </Grid>
            <!--Controls-->
            <Grid Grid.Row="1">
                <Grid Margin="0,0,0,0">
                    <!--Center Button Controls-->
                    <Grid Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{DynamicResource ButtonStyle1}" Margin="1,0,1,0" x:Name="rewindButton" Click="rewindButton_Click" BorderThickness="0" Width="45px" BorderBrush="{x:Null}" Foreground="{x:Null}">
                                <Button.Background>
                                    <ImageBrush ImageSource="/rewind.png" Stretch="Uniform"/>
                                </Button.Background>
                            </Button>
                            <Button  Style="{DynamicResource ButtonStyle1}" Margin="2,0,2,0" x:Name="playButton" BorderThickness="0" MinHeight="60px" Width="60" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="playButton_Click" >
                                <Button.Background>
                                    <ImageBrush ImageSource="/play.png" Stretch="Uniform"/>
                                </Button.Background>
                            </Button>
                            <Button  Style="{DynamicResource ButtonStyle1}" x:Name="pauseButton" BorderThickness="0" MinHeight="60px" Width="60" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="pauseButton_Click" Visibility="Collapsed" >
                                <Button.Background>
                                    <ImageBrush ImageSource="/pause.png" Stretch="Uniform"/>
                                </Button.Background>
                            </Button>
                            <Button  Style="{DynamicResource ButtonStyle1}"   x:Name="forwardButton" BorderThickness="0"  Width="45px" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="forwardButton_Click">
                                <Button.Background>
                                    <ImageBrush ImageSource="/forward.png" Stretch="Uniform"/>
                                </Button.Background>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Grid>
            </Grid>


        </Grid>



    </Grid>

</Window>
